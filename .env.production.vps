# Production Environment Variables for VPS Deployment
# Copy this to /var/www/crystal-admin/backend/.env on the VPS

# ============================================================================
# NODE ENVIRONMENT
# ============================================================================

NODE_ENV=production
BACKEND_PORT=3001

# ============================================================================
# DATABASE CONFIGURATION
# ============================================================================

DB_HOST=localhost
DB_PORT=3306
DB_USER=root
DB_PASSWORD=<YOUR_MYSQL_PASSWORD_HERE>
DB_NAME=id_card
DATABASE_URL=mysql://root:<YOUR_MYSQL_PASSWORD_HERE>@localhost:3306/id_card

# ============================================================================
# FRONTEND URLS (CORS)
# ============================================================================

# Update these with your actual domain
FRONTEND_URL=http://72.62.241.170
FRONTEND_URL_ALT=http://72.62.241.170:80

# ============================================================================
# REDIS CONFIGURATION (for queue system, if enabled)
# ============================================================================

REDIS_URL=redis://localhost:6379
REDIS_DB=0

# ============================================================================
# PYTHON MICROSERVICE
# ============================================================================

PYTHON_PATH=/var/www/crystal-admin/rembg-microservice/venv/bin/python
REMBG_SERVICE_URL=http://localhost:5001

# ============================================================================
# JWT & SECURITY (generate strong values)
# ============================================================================

JWT_SECRET=<GENERATE_STRONG_SECRET_KEY>
JWT_EXPIRES_IN=7d
REFRESH_TOKEN_SECRET=<GENERATE_ANOTHER_STRONG_SECRET>

# ============================================================================
# FILE UPLOADS
# ============================================================================

# Local file storage
UPLOAD_DIR=/var/www/crystal-admin/backend/uploads
MAX_FILE_SIZE=50000000

# Optional: Cloudinary for cloud storage
# CLOUDINARY_NAME=your_cloudinary_name
# CLOUDINARY_API_KEY=your_api_key
# CLOUDINARY_API_SECRET=your_api_secret

# ============================================================================
# LOGGING
# ============================================================================

LOG_LEVEL=info
LOG_DIR=/var/www/crystal-admin/backend/logs

# ============================================================================
# OPTIONAL: SendGrid for email notifications
# ============================================================================

# SENDGRID_API_KEY=your_sendgrid_key
# SMTP_FROM_EMAIL=noreply@yourdomain.com

# ============================================================================
# Optional: Stripe for payments (if applicable)
# ============================================================================

# STRIPE_SECRET_KEY=your_secret_key
# STRIPE_PUBLISHABLE_KEY=your_publishable_key

# ============================================================================
# Application Settings
# ============================================================================

APP_NAME=Crystal Admin
APP_VERSION=1.0.0
API_TIMEOUT=30000
